<?xml version="1.0"?>
<DataForm xmlns="http://www.enova.pl/schema/form.xsd" Priority="100">
	<Page CaptionHtml="Zadanie1" DataContext="{DataSource}">
		<Group CaptionHtml="Zadanie rekrutacyjne.">
			<Row>
				<Stack Width="200" Height="*">
					<Grid EditValue="{ListaComitow}" Width="220" Height="*">
						<Field CaptionHtml="Aktywne" Width="5" EditValue="{Aktywny}" />
						<Field CaptionHtml="Gałąź" Width="10" EditValue="{Branche}" />
						<Field CaptionHtml="Merge" Width="10" EditValue="{Merge}" />
						<Field CaptionHtml="Commit" Width="40" EditValue="{Commit}" />
						<Field CaptionHtml="Autor" Width="20" EditValue="{Autor}" />
						<Field CaptionHtml="Data" Width="19" EditValue="{Data}" />
						<Field CaptionHtml="Ilość" Width="19" EditValue="{Ilosc}" />
						<Field CaptionHtml="Opis" Width="100" EditValue="{Opis}" />
					</Grid>
				</Stack>
				<Stack Width="*">
					<Command CaptionHtml="Załaduj commit's" MethodName="LoadCommits"/>
					<Command CaptionHtml="Ilość commitów na dzień" MethodName="CommitowNaDzien" Visibility="{IsLista}"/>
					<Command CaptionHtml="Średnia ilość commitów dziennie" MethodName="SrednioCommitowDziennie" Visibility="{IsLista}"/>
				</Stack>
			</Row>
		</Group>
		<Group CaptionHtml="Zadanie rekrutacyjne">
			<Field CaptionHtml="Lokalizacja repozytorium" LabelWidth="30" Width="60" EditValue="{GitWorkDir}" IsReadOnly="false"/>
		</Group>
	</Page>
</DataForm>
